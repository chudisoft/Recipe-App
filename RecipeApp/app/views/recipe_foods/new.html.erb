<div class="card col-md-4">
  <%= form_with(model: [@recipe, @recipe_food], url: recipe_foods_path(@recipe), method: :post) do |form| %>
    <div class="card-header">
      <h1>Add Food to Recipe</h1>
    </div>
    <div class="card-body">
      <div class="mb-3 form-group">
        <%= form.label :food_id, "Select Food" %>
        <%= form.collection_select :food_id, @foods, :id, :name, { prompt: "Select Food" }, { class: "form-control" }  %>
      </div>
      <div class="mb-3 form-group">
        <%= form.label :quantity %>
        <%= form.number_field :quantity, class: "form-control" %>
      </div>
    </div>
    <div class="card-footer">
      <%= form.submit "Add Food", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
