<div class='card p-2 col-md-4'>
    <h1>Add New Food</h1>

    <%= form_with(model: @food, url: foods_path, method: :post) do |form| %>
    <div class='form-group'>
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :measurement_unit, class: 'form-label' %>
        <%= form.text_field :measurement_unit, class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :price, class: 'form-label' %>
        <%= form.number_field :price, step: '0.01', min: '0', class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :quantity, class: 'form-label' %>
        <%= form.number_field :quantity, step: '1', min: '0', class: 'form-control' %>
    </div>

    <div>
        <%= form.submit "Add Food", class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>
