<div class="container mt-4">
  <h1>Your Recipes</h1>
  <%= link_to 'Add New Recipe', new_recipe_path, class: 'btn btn-primary mt-3 float-end' %>
  <div class="col-md-12 row">
    <% @recipes.each do |recipe| %>
      <div class="mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to recipe.name, recipe_path(recipe) %></h5>
            <p class="card-text"><%= recipe.description %></p>
            <% if current_user == recipe.user %>
                <%= form_with(model: recipe, url: recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
                    <%= form.submit 'Remove', class: 'btn btn-danger btn-sm' %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
