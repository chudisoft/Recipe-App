<div class="container mt-4">
  <h1>Public Recipes</h1>
  <div class="col-md-12 row">
    <% @recipes.each do |recipe| %>
      <div class="mb-4">
        <div class="public--card--container">
          <div class="public--card">
            <div class="card-body">
            <h5 class="card-title"><%= link_to recipe.name, recipe_path(recipe) %></h5>
            <p>By: <%= recipe.user.name %></p>
          </div>
          <div class="card-body">
            <p class="card-title">Total food items: <%= count_public_recipe_food_item(recipe) %> </p>
           <p class="card-title">Total price: $<%= public_recipe_food_item_price(recipe) %> </p>
          </div>
          </div>
           <% if current_user == recipe.user %>
                <%= form_with(model: recipe, url: recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
                    <%= form.submit 'Remove', class: 'btn btn-danger btn-sm' %>
                <% end %>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
